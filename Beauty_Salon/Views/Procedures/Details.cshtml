@model Beauty_Salon.Models.Procedure

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Допълнителна информация за процедура</h1>
<br />
<br />
<h3>Процедура</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Име
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            Продължителност
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration) минути
        </dd>
        <dt class="col-sm-2">
            Работник
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkerName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-custom" asp-action="Edit" asp-route-id="@Model?.Id">Промени</a> |
    <a class="btn btn-custom" asp-action="Index">Назад</a>
</div>
